<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.employer.RateEmployeeFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:id="@+id/employerReviewLinearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:padding="24dp">

                <TextView
                    android:id="@+id/titleRateEmployee"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_bold"
                    android:text="@string/emp_rev"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_marginBottom="16dp"
                    android:textColor="#000000"/>

                <TextView
                    android:id="@+id/labelSkillsKnowledge"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="@string/skills_and_knowledge"
                    android:textColor="#000000"
                    android:textSize="18sp" />

                <RatingBar
                    android:id="@+id/ratingSkillsKnowledge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:numStars="5"
                    android:stepSize="0.5"
                    android:layout_marginBottom="16dp"/>

                <TextView
                    android:id="@+id/labelQualityOfWork"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="@string/quality_of_work_adaptability_problem_solving"
                    android:textSize="18sp"
                    android:textColor="#000000"
                    android:layout_marginBottom="8dp"/>

                <RatingBar
                    android:id="@+id/ratingQualityOfWork"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:numStars="5"
                    android:stepSize="0.5"
                    android:layout_marginBottom="16dp"/>

                <TextView
                    android:id="@+id/labelCommunicationSkills"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="@string/communication_skills"
                    android:textSize="18sp"
                    android:textColor="#000000"
                    android:layout_marginBottom="8dp"/>

                <RatingBar
                    android:id="@+id/ratingCommunicationSkills"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:numStars="5"
                    android:stepSize="0.5"
                    android:layout_marginBottom="16dp"/>

                <TextView
                    android:id="@+id/labelInitiativeProactiveness"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="@string/initiative_and_proactiveness"
                    android:textSize="18sp"
                    android:textColor="#000000"
                    android:layout_marginBottom="8dp"/>

                <RatingBar
                    android:id="@+id/ratingInitiativeProactiveness"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:numStars="5"
                    android:stepSize="0.5"
                    android:layout_marginBottom="16dp"/>

                <TextView
                    android:id="@+id/labelTeamworkCollaboration"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="@string/teamwork_and_collaboration"
                    android:textSize="18sp"
                    android:textColor="#000000"
                    android:layout_marginBottom="8dp"/>

                <RatingBar
                    android:id="@+id/ratingTeamworkCollaboration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:numStars="5"
                    android:stepSize="0.5"
                    android:layout_marginBottom="16dp"/>

                <Button
                    android:id="@+id/submitRatingButton"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/submit_rating"
                    android:fontFamily="@font/poppins_semibold"
                    android:textColor="#FFFFFF"
                    android:backgroundTint="#38bdf8"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="24dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
