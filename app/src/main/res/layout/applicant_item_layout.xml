<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp"
    android:background="@drawable/rounded_edit_text">

    <TextView
        android:id="@+id/applicant_name_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Applicant Name"
        android:textStyle="bold"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/job_title_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Job Title"
        android:textSize="14sp"
        android:textColor="#666666" />

    <TextView
        android:id="@+id/application_date_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Application Date"
        android:textSize="14sp"
        android:textColor="#666666" />

    <TextView
        android:id="@+id/status_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Status"
        android:textSize="14sp"
        android:textColor="#666666" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">

        <Button
            android:id="@+id/view_resume_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="View Resume" />

        <Button
            android:id="@+id/send_email_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Send Email"
            android:layout_marginStart="8dp" />
    </LinearLayout>
</LinearLayout>
