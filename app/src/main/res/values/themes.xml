<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.Worksy" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_variant</item>
        <item name="colorOnPrimary">@color/white</item>
        
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_variant</item>
        <item name="colorOnSecondary">@color/black</item>
        
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        
        <!-- Text appearance -->
        <item name="textAppearanceHeadlineLarge">@style/TextAppearance.Worksy.HeadlineLarge</item>
        <item name="textAppearanceHeadlineMedium">@style/TextAppearance.Worksy.HeadlineMedium</item>
        <item name="textAppearanceBodyLarge">@style/TextAppearance.Worksy.BodyLarge</item>
        <item name="textAppearanceBodyMedium">@style/TextAppearance.Worksy.BodyMedium</item>
    </style>

    <!-- Text Styles -->
    <style name="TextAppearance.Worksy.HeadlineLarge" parent="TextAppearance.Material3.HeadlineLarge">
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="TextAppearance.Worksy.HeadlineMedium" parent="TextAppearance.Material3.HeadlineMedium">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="TextAppearance.Worksy.BodyLarge" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <style name="TextAppearance.Worksy.BodyMedium" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <!--button color-->
    <style name="Widget.Material3.Button.OutlinedButton" parent="Widget.Material3.Button">
        <item name="colorPrimary">#38bdf8</item>
    </style>
</resources>
