<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/textViewJobTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/job_title"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#222222" />

        <TextView
            android:id="@+id/textViewJobDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/job_description"
            android:fontFamily="@font/poppins_semibold"
            android:textSize="14sp"
            android:textColor="#666666"
            android:layout_marginTop="2dp" />

        <TextView
            android:id="@+id/textViewCompanyName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/company_name"
            android:fontFamily="@font/poppins_semibold"
            android:textSize="14sp"
            android:textColor="#666666"
            android:layout_marginTop="2dp" />

        <TextView
            android:id="@+id/textViewLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/location"
            android:fontFamily="@font/poppins_semibold"
            android:textSize="14sp"
            android:textColor="#666666"
            android:layout_marginTop="2dp" />

        <TextView
            android:id="@+id/textViewSalary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/salary_range"
            android:fontFamily="@font/poppins_semibold"
            android:textSize="14sp"
            android:textColor="#666666"
            android:layout_marginTop="2dp" />

        <TextView
            android:id="@+id/textViewWorkArrangement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/work_arrangement"
            android:fontFamily="@font/poppins_semibold"
            android:textSize="14sp"
            android:textColor="#666666"
            android:layout_marginTop="2dp" />

        <TextView
            android:id="@+id/textViewWorkSetup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/work_setup"
            android:fontFamily="@font/poppins_semibold"
            android:textSize="14sp"
            android:textColor="#666666"
            android:layout_marginTop="2dp" />

        <TextView
            android:id="@+id/textViewExperienceLevel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/experience_level"
            android:fontFamily="@font/poppins_semibold"
            android:textSize="14sp"
            android:textColor="#666666"
            android:layout_marginTop="2dp" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chipEmploymentType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/employment_type"
            style="@style/Widget.MaterialComponents.Chip.Entry"
            android:layout_marginTop="4dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp">

            <Button
                android:id="@+id/buttonApplyNow"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="@string/apply_now"
                android:textColor="@android:color/white"
                app:backgroundTint="#38bdf8"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"/>
            <Button
                android:id="@+id/buttonUploadResume"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="Upload Resume"
                android:textColor="@android:color/white"
                app:backgroundTint="#4CAF50"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"/>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>